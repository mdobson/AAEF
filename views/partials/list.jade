span {{loginObj.user.name}}
br
img(src='{{loginObj.user.profile_image_url}}')
br
input(type='text' ng-model='search' class='search-query' placeholder='search')
table
  thead
    tr
      th Project
      th Description
      th
        a(href='#/new') add
  tbody
    tr(ng-repeat="project in projects | orderByPriority | filter:search | orderBy:'name'")
      td
        a {{project.name}}
      td {{project.description}}
      td
        a(href='#/edit/{{project.$id}}') edit
